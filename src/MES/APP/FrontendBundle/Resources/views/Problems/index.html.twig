{% extends '::base.html.twig' %}
{% block pageName %}Lista <small>problemów</small>{% endblock %}
{% block breadcrumbs %}
    {{ 
    render_breadcrumbs([
        { content: 'Lista problemów', path: 'problem'},
    ]) 
    }}
{% endblock %}
{% block content -%}
    <table class="table table-striped table-responsive table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('problem_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>
                        <nav>
                            <ul class="pagination">
                                <li>
                                    <a href="{{ path('problem_show', { 'id': entity.id }) }}">Podgląd</a>
                                </li>
                                <li>
                                    <a href="{{ path('problem_edit', { 'id': entity.id }) }}">Edycja</a>
                                </li>
                            </ul>
                        </nav>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('problem_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}

{% extends '::base.html.twig' %}
{% block pageName %}Kategoria{% endblock %}
{% block breadcrumbs %}
    {{ 
    render_breadcrumbs([
        { content: 'Lista kategorii', path: 'catagory'},
        { content: 'Kategoria: ' ~ entity.name},
    ]) 
    }}
{% endblock %}
{% block content %}
    <table class="table table-responsive table-hover table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
        </tbody>
    </table>

    <nav>
        <ul class="pagination" style="list-style-type: none">
            <li>
                <a href="{{ path('catagory') }}">
                    Wróć do listy
                </a>
            </li>
            <li>
                <a href="{{ path('catagory_edit', { 'id': entity.id }) }}">
                    Edytuj
                </a>
            </li>
        </ul>
    </nav>
    <ul class="pagination" style="list-style-type: none">
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}

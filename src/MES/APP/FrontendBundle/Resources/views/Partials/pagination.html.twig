{# default Sliding pagination control implementation #}

{% if pageCount > 1 %}
    <nav>
        <ul class="pagination">
            {% if first is defined and current != first %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): first})) }}">&laquo;</a>
                </li>
            {% endif %}

            {% if previous is defined %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
                        <span aria-hidden="true">&lt;</span>
                        <span class="sr-only">Poprzednia</span>
                    </a>
                </li>
            {% else %}
                <li class="disabled">
                    <a href="javascript:void(0)">
                        <span aria-hidden="true">&lt;</span>
                        <span class="sr-only">Poprzednia</span>
                    </a>
                </li>
            {% endif %}

            {% for page in pagesInRange %}
                {% if page != current %}
                    <li>
                        <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                    </li>
                {% else %}
                    <li class="active">
                        <span>{{ page }} <span class="sr-only">{{ 'Obecna' }}</span>
                        </span>
                    </li>
                {% endif %}

            {% endfor %}

            {% if next is defined %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                        <span aria-hidden="true">&gt;</span>
                        <span class="sr-only">Następna</span>
                    </a>
                </li>
            {% else %}
                <li class="disabled">
                    <a href="javascript:void(0)">
                        <span aria-hidden="true">&gt;</span>
                        <span class="sr-only">Następna</span>
                    </a>
                </li>
            {% endif %}

            {% if last is defined and current != last %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): last})) }}">&raquo;</a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}

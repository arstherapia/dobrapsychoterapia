{% extends 'FrontendBundle::base.html.twig' %}
{% block content %}	
    <div class="section_header">
        <div class="row">
            <div class="col-sm-12">
                <br>
                <h4><strong>{{ problem.name }}</strong>:</h4>
                <br>
            </div>
        </div>
    </div>
    <div class="row">	
        {% for product in problem.movies %}
            <div class="col-sm-6">
                <div class="kategorie">
                    <div class="row text-center">
                        {% if product.cover %}
                            <div class="col-sm-4 hidden-xs">
                                <img src="{{ asset(product.cover, null, true) }}" style="width:100%" class="picColor"/> 
                            </div>	
                            <div class="col-sm-8 col-xs-12">
                            {% else %}
                                <div class="col-sm-12">
                                {% endif %}

                                <h5>
                                    <strong>{{ product.name }}</strong>
                                </h5>
                                </br>
                                <strong>
                                    {% for therapist in product.therapist %}
                                        {{ therapist.name ~ ', ' }}
                                    {% else %}
                                        Brak terapeut√≥w
                                    {% endfor %}
                                </strong>
                                <br/>
                                <br/>
                                {{ product.descriptionShort|slice(0, 200) ~ ((product.descriptionShort|length > 200)?'...':'') }}
                                <br/><br/>
                                <a class="btn btn-default btn-block" href="{{ path('frontend.products.display', { id: product.id }) }}">Zobacz opis i fragment filmu</a>
                            </div>
                        </div>
                    </div>
                </div>
                {% if loop.index % 2 == 0 %}
                </div>
                <div class="row">
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
{% block afterContent %}{% endblock %}
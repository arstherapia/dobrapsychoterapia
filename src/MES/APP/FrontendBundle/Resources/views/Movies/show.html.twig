{% extends '::base.html.twig' %}
{% block pageName %}Filmy{% endblock %}
{% block breadcrumbs %}
    {{ 
    render_breadcrumbs([
        { content: 'Lista filmów', path: 'filmy'},
        { content: 'Film: ' ~ entity.name},
    ]) 
    }}
{% endblock %}
{% block content %}
    <table class="table table-responsive table-hover table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td><img src="{{ asset(entity.cover) }}" alt="cover"/></td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Descriptionshort</th>
                <td>{{ entity.descriptionShort }}</td>
            </tr>
            <tr>
                <th>Proffesionalprice</th>
                <td>{{ entity.proffesionalPrice }}</td>
            </tr>
            <tr>
                <th>Individualprice</th>
                <td>{{ entity.individualPrice }}</td>
            </tr>
        </tbody>
    </table>
    <nav>
        <ul class="pagination" style="list-style-type: none">
            <li>
                <a href="{{ path('filmy') }}">
                    Wróć do listy
                </a>
            </li>
            <li>
                <a href="{{ path('filmy_edit', { 'id': entity.id }) }}">
                    Edytuj
                </a>
            </li>
        </ul>
    </nav>
    <ul class="pagination" style="list-style-type: none">
        <li>{{ form(delete_form) }}</li>
    </ul>

{% endblock %}

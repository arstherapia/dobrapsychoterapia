{% extends '::base.html.twig' %}
{% block pageName %}Podgląd terapeuty{% endblock %}
{% block breadcrumbs %}
    {{ 
    render_breadcrumbs([
        { content: 'Lista filmów', path: 'filmy'},
        { content: 'Terapeuta: ' ~ entity.name},
    ]) 
    }}
{% endblock %}
{% block content %}

    <table class="table table-responsive table-hover table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ entity.bio }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td><img src="{{ asset(entity.picture) }}" alt="cover"/></td>
            </tr>
        </tbody>
    </table>

    <nav>
        <ul class="pagination" style="list-style-type: none">
            <li>
                <a href="{{ path('therapist') }}">
                    Wróć do listy
                </a>
            </li>
            <li>
                <a href="{{ path('therapist_edit', { 'id': entity.id }) }}">
                    Edytuj
                </a>
            </li>
        </ul>
    </nav>
    <ul class="pagination" style="list-style-type: none">
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
